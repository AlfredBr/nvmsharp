                <Setter TargetName="BorderRect"
                        Property="BorderBrush"
                        Value="{Binding Path=SystemPressedBorderBrush, RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type wpfspark:SparkWindow}}}"></Setter>
                <Setter TargetName="BorderRect"
